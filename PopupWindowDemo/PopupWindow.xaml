<Window x:Class="PopupWindowDemo.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PopupWindowDemo"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        BorderThickness="0"
        mc:Ignorable="d"
        Title="Popup" Opacity="1" Background="Transparent" SizeToContent="WidthAndHeight">
    <Border Name="Holder" BorderBrush="Gainsboro" BorderThickness="0" Background="DimGray" Opacity="1" Padding="0" Margin="0">
        <Grid Margin="0">
            <Label Padding="5,3,5,3" Margin="0" Name="ContentLabel" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        </Grid>
    </Border>
</Window>
